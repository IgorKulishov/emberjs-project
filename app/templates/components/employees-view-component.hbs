<table class="table table-striped">
	<thead>
	    <tr>
			<th>Employee Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
	    </tr>
	</thead>
	<tbody>
	{{#each employees as |employee|}}
        <tr class="active">
			<td><a href="/employees-detail">{{employee.id}}</a></td>
			<td><a href="/employees-detail">{{employee.firstName}}</a></td>
			<td><a href="/employees-detail">{{employee.lastName}}</a></td>
			<td><a href="/employees-detail">{{employee.email}}</a></td>
        </tr>
    {{/each}}
	</tbody>
</table>
<a class="btn btn-default" role="button" href="/employees-add">Add New Employee</a>