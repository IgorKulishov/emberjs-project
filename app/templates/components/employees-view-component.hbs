<table class="table table-striped">
	<thead>
	    <tr>
			<th>Employee Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
	    </tr>
	</thead>
	<tbody>
	{{#each employees as |employee|}}
        <tr class="active">
			<td>{{employee.id}}</td>
			<td>{{employee.firstName}}</td>
			<td>{{employee.lastName}}</td>
			<td>{{employee.email}}</td>
        </tr>
    {{/each}}
	</tbody>
</table>